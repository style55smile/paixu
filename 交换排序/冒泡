#include<iostream>  
using namespace std;  

int main() {  
	int a[] = { 9,8,4,6,2,1,3,5,7,0 };  
	int len = sizeof(a) / sizeof(int);  

	int temp;  
	for (int i = 0; i < len; i++)  
	{  
		for (int j=0; j < len-1; j++)  
		{  
			if (a[j]>a[j+1])  
			{  
				temp = a[j];  
				a[j] = a[j+1];  
				a[j + 1] = temp;  
			}  
		}  
	}  
	for (int i = 0; i < len; i++)  
	{  
		cout << a[i] << " ";  
	}  

	system("pause");  
	return 0;  
}  
